<Window x:Class="TuringTrader.Simulator.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:TuringTrader.Simulator"
        mc:Ignorable="d" 
        Title="Strategy Report"
        Height="700" Width="1000">
    <Grid>
        <ComboBox Name="ChartSelect" Margin="10,10,10,0" VerticalAlignment="Top" ItemsSource="{Binding AvailableCharts}" SelectedValue="{Binding SelectedChart}"/>
        <oxy:PlotView Name="Chart" Margin="10,37,10,10"/>
        <DataGrid Name="Table" Margin="10,37,10,10"/>
    </Grid>
</Window>
